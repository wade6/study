<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.0.xsd" >

	<bean id="person" class="com.alibaba.webx.study.spring.chapter4.autoaop.Person" />

	<!-- 自动生成切面代理 -->
	<bean class="org.springframework.aop.framework.autoproxy.DefaultAdvisorAutoProxyCreator" />

	<!-- 通知者 -->
	<bean id="personAdvisor" class="org.springframework.aop.aspectj.AspectJExpressionPointcutAdvisor">
		<property name="advice" ref="personAdvice" />
		<property name="expression" value="execution(* *.doThing(..))" />
	</bean>
	
	<!-- 通知的实现 -->
	<bean id="personAdvice" class="com.alibaba.webx.study.spring.chapter4.autoaop.PersonAdvice" />


</beans>